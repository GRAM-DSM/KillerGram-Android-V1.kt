<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KillerGramBanner" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:src">@drawable/killer_gram_banner</item>
    </style>

    <style name="InputEditText" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/gray800</item>
        <item name="android:background">@drawable/bg_button_gray_radius_8</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:textColorHint">@color/gray800</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeErrorColor">@color/system</item>
    </style>

    <style name="InputButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:background">@drawable/bg_button_main_radius_8</item>
    </style>

    <!-- font style -->
    <style name="pretendard_h1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:lineSpacingExtra">6.4sp</item>
    </style>

    <style name="pretendard_h2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:lineSpacingExtra">5.6sp</item>
    </style>

    <style name="pretendard_h3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:lineSpacingExtra">7.2sp</item>
    </style>

    <style name="pretendard_m1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="pretendard_m2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:lineSpacingExtra">9dp</item>
    </style>

    <style name="pretendard_m3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="pretendard_label" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:lineSpacingExtra">7dp</item>
    </style>


</resources>